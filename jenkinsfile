pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                echo "Running build and sending test emails today"
            }
        }
    }

    post {
        success {
            emailext(
                to: "chandnanideepesh0@gmail.com",
                subject: "Build SUCCESS",
                body: "Build URL: ${BUILD_URL}"
            )
        }
        failure {
            emailext(
                to: "chandnanideepesh0@gmail.com",
                subject: "Build FAILED",
                body: "Build URL: ${BUILD_URL}"
            )
        }
    }
}

